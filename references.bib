	abstract = {Olive oil is the pillar of the agricultural sector in the EU, and olive oil consumption is increasing in the spotlight. There is a gap in previous research regarding the effects of consumer perception and ecological impacts on olive consumption choices. This study recognized the significance of consumer perception in shaping olive oil consumption choice and research gaps in olive ecosystem assessment. The purpose of the thesis is to reveal the impacts of consumer perception on consumption choice using choice experiment data, and olive ecological influence on consumption and environment. So the study used factor analysis to find latent variables and incorporated consumer perception categorization into the Partial Least Squares Structural Equation Model (PLS-SEM) to explore moderation effects and mediation effects between consumer perception and consumption choice. Furthermore, the study integrated insights from olive ecology through Life cycle Assessment and analyzed environmental impacts. The results showed that the perception of price and health benefits are not the greatest impact on Extra Virgin Olive Oil (EVOO) consumption, but the taste and trust of the olive oil products. The regional attributes of olive oil have impacts on consumption choice. In addition, from the farming to packaging and logistics of olive oil, each phase is related to ecology and human well-being to varying degrees. Olive oil producers could consider adapting production and packaging methods and sell strategies to reduce environmental and ecological impacts. Policy intervention should take not only the health benefits and price but also the specific regional conditions and ecological impacts into account when promoting a sustainable olive oil value chain.},
	language = {en},
	author = {Li, Youmin},
}

@article{lenus_predicting_2024,
