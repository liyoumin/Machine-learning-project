	author = {Kondaridze, Magdana and Luckstead, Jeff},
	year = {2023},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/1477-9552.12536},
	keywords = {dairy industry, domestic subsidies, gravity model, international trade},
	pages = {857--873},
}

