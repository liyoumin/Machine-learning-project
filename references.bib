@article{ferto_dairy_2021,
	title = {Dairy sector trade dynamics: {Some} insights on the evolution of trade linkages within the {EU}},
	volume = {72},
	copyright = {© 2021 The Authors. Journal of Agricultural Economics published by John Wiley \& Sons Ltd on behalf of Agricultural Economics Society.},
