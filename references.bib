	journal = {Agricultural Systems},
	author = {Veltman, Karin and Rotz, C. Alan and Chase, Larry and Cooper, Joyce and Forest, Chris E. and Ingraham, Peter A. and Izaurralde, R. César and Jones, Curtis D. and Nicholas, Robert E. and Ruark, Matthew D. and Salas, William and Thoma, Greg and Jolliet, Olivier},
	month = aug,
	year = {2021},
	keywords = {Beneficial management practices (BMP), Climate change, Dairy farm, Environmental impact, Feed production},
	pages = {103170},
}

